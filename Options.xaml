<ResourceDictionary
    x:Class="IgorVonNyssen.NINA.DlLink.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  This data template will be displayed in N.I.N.A. on the options->plugin tab with the datacontext of the TestPlugin instance  -->
    <!--  In order for this datatemplate to be picked correctly, the key has to follow the naming convention of <IPlugin.Name>_Options -->
    <!--  Furthermore the Resource Dictionary has to be exported via code behind export attributes  -->
    <DataTemplate x:Key="DL Link_Options">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <!--  Spacer row  -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <!--  Spacer row  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="Digital Logger Switch IP Address" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                MinWidth="50"
                Text="{Binding ServerAddress}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="Username" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                MinWidth="50"
                Text="{Binding Username}" />

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="Password" />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                MinWidth="50"
                Text="{Binding Password}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>